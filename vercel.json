{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "BRAVE_SEARCH_API_KEY": {
      "description": "API key for Brave Search API",
      "required": true
    }
  },
  "regions": ["iad1"],
  "functions": {
    "pages/api/**": {
      "memory": 512,
      "timeout": 30
    }
  }
}
